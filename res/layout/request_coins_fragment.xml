<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:background="#ddd">

	<TextView android:text="Requested amount (optional)" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginTop="8dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:textSize="16sp"
		android:textStyle="bold" />

	<EditText android:id="@+id/request_coins_amount" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:background="@drawable/edit_text"
		android:inputType="numberDecimal" android:textSize="28sp" android:textStyle="bold" android:hint="0.00"
		android:drawablePadding="4dp" />

	<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"
		android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="Have this QR-code scanned by the sender:"
		android:textSize="16sp" android:textStyle="bold" />

	<ImageView android:id="@+id/request_coins_qr" android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="100" android:layout_margin="16dp" android:scaleType="centerInside" android:background="@drawable/qrcode_frame" />

</LinearLayout>
