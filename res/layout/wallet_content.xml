<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical">

	<fragment android:id="@+id/action_bar_fragment" android:name="de.schildbach.wallet.ActionBarFragment"
		android:layout_width="fill_parent" android:layout_height="44dp" />

	<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:foreground="@drawable/title_bar_shadow"
		android:foregroundGravity="top|fill_horizontal">

		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">

			<fragment android:name="de.schildbach.wallet.WalletAddressFragment" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_margin="16dp" />

			<fragment android:id="@+id/wallet_balance_fragment" android:name="de.schildbach.wallet.WalletBalanceFragment"
				android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="50"
				android:layout_gravity="center" />

			<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal"
				android:text="WARNING: This is entirely experimental. You *will* loose your Bitcoins associated with this wallet! Use at your own risk, and use only with small amounts of Bitcoins!"
				android:textSize="12sp" />

		</LinearLayout>

	</FrameLayout>

</LinearLayout>
