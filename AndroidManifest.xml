<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="de.schildbach.wallet"
	android:versionCode="9" android:versionName="0.4" android:installLocation="preferExternal">

	<application android:name=".Application" android:icon="@drawable/app_icon" android:label="@string/app_name">

		<activity android:name=".WalletActivity" android:theme="@android:style/Theme.Light.NoTitleBar"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboard|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".SendCoinsActivity" android:theme="@android:style/Theme.Light.NoTitleBar"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboard|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<data android:scheme="bitcoin" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".RequestCoinsActivity" android:theme="@android:style/Theme.Light.NoTitleBar"
			android:screenOrientation="portrait" android:configChanges="orientation|keyboard|keyboardHidden" />

		<activity android:name=".PreferencesActivity" />

		<provider android:name=".AddressBookProvider" android:authorities="de.schildbach.wallet.address_book"
			android:exported="false" />

		<service android:name=".Service" />

	</application>

	<uses-sdk android:minSdkVersion="5" android:targetSdkVersion="8" />

	<uses-permission android:name="android.permission.INTERNET" />

	<supports-screens android:largeScreens="true" android:normalScreens="true" android:smallScreens="true"
		android:anyDensity="true" />

</manifest>
